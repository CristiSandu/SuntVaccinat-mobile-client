                        </Label.FormattedText>
                    </Label>

                    <Label TextColor="{StaticResource White}"
                           Style="{StaticResource TitleStyle}">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="venus-mars "
                                      FontFamily="FAS"
                                      FontSize="Large" />
                                <Span Text="M" />
                            </FormattedString>
