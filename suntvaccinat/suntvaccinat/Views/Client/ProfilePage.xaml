                            <FormattedString>
                                <Span Text="cake-candles "
                                      FontFamily="FAS"
                                      FontSize="Large" />
                                <Span Text="21" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>

                    <Label TextColor="{StaticResource White}"
                           Style="{StaticResource TitleStyle}">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="phone "
                                      FontFamily="FAS"
                                      FontSize="Large" />
                                <Span Text="0725315952" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>

                    <Label TextColor="{StaticResource White}"
                           Style="{StaticResource TitleStyle}">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="mobile-screen-button "
                                      FontFamily="FAS"
                                      FontSize="Large" />
                                <Span Text="{Binding PhoneModel}" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>

